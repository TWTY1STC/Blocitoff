<h1><%= @topic.name %></h1>
<div>
  <% if user_is_authorized_for_topics? %>
    <div class="col-md-4">
      <%= link_to "Edit Topic", edit_topic_path, class: 'btn btn-success' %>
      <%= link_to "Delete Topic", @post, method: :delete, class: 'btn btn-danger', data: {confirm: "Are you sure you want to delete this topic?"} %>
    </div>
  <% end %>
</div>
  
    
<div class="row">
    <div class="col-md-8">
      <p class"lead"><%= @topic.description %></p>
        <%= render @topic.posts %> 
           <small>
            <% if user_is_authorized_for_post?(@post) %>
                <%= link_to "Delete Post", @topic.post, method: :destroy, class: 'btn btn-danger', data: {confirm: "Are you sure you want to delete this post?"} %>
            <% end %>
          </small>
          <% if current_user %>
          <div class="col-md-4">
            <%= link_to "New Post", new_topic_post_path(@topic), class: 'btn btn-success' %>
          </div>
          <% end %>
    </div>
</div>