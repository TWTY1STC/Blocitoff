<div class="row">
    <div class="col-md-8">
        <div class="media">
            <br />
            <% avatar_url = @user.avatar_url(128) %>
            <% if avatar_url %>
                <div class="media-left">
                    <%= image_tag avatar_url, class: 'media-object' %>
                </div>
            <% end %>
            <div class="media-body">
                <h2 class="media-heading"><%= @user.name %></h2>
                <small>
                    <%= pluralize(@user.posts.count, 'post') %>,
                    <%= pluralize(@user.comments.count, 'comment') %>
                </small>
            </div>
        </div>
    </div>
</div>

<% if user_activity_empty? %>
    <p><%= "#{user.name} has not submitted any posts or comments yet." %></p>

<% elsif user_posts_empty? %>
    <%= "#{user.name} has not submitted any posts yet." %>
    <h2>Comments</h2>
    <%= render @user.comments %>

<% elsif user_comments_empty? %>
    <%= "#{user.name} has not submitted any comments yet." %>
    <h2>Posts</h2>
    <%= render @user.posts %>

<% else %>
    <h2>Posts</h2>
    <%= render @user.posts %>
    
    <h2>Comments</h2>
    <%= render @user.comments %>
<% end %>

<div>
<h2> Favorites</h2>
    <% @user.favorites do |favorite| %>
        <ul>
        <% avatar_url = @favorite.post.user.avatar_url(24) %>
            <% if avatar_url %>
                <div class="media-left">
                    <%= image_tag avatar_url, class: 'media-object' %>
                </div>
            <% end %>
        <li> <%= @favorite.post.title %> </li>
            <small>
                <%= pluralize(@post.points.count, 'vote') %>,
                <%= pluralize(@post.comments.count, 'comment') %>
            </small>   
        </ul>
    <% end %>

</div>